# Supabase Configuration
VITE_SUPABASE_PROJECT_ID="your_project_id_here"
VITE_SUPABASE_PUBLISHABLE_KEY="your_publishable_key_here"
VITE_SUPABASE_URL="https://your_project_id.supabase.co"

# Telemetry Privacy Controls
# Enable/disable telemetry collection (must be 'true' to enable, default: false)
VITE_TELEMETRY_ENABLED=false

# Sampling rate for telemetry (0.0 to 1.0, where 0.0 = no sampling, 1.0 = 100% sampling)
# Use this to collect data from only a percentage of users
VITE_TELEMETRY_SAMPLE_RATE=1.0

# Respect Do Not Track (DNT) browser setting (default: true)
# When true, telemetry is disabled if user has DNT enabled in their browser
VITE_TELEMETRY_RESPECT_DNT=true

# Salt for HMAC-SHA-256 hashing of session IDs (REQUIRED for production)
# Change this to a random string to anonymize user tracking
# IMPORTANT: Never commit real production values to version control
VITE_ANON_ID_SALT="change_me_to_random_string_in_production"

# Telemetry endpoints (optional, defaults to /api/telemetry and /api/errors)
VITE_TELEMETRY_ENDPOINT="/api/telemetry"
VITE_ERROR_ENDPOINT="/api/errors"

# Application version (optional, used in telemetry reports)
VITE_APP_VERSION="0.0.0"

# Backend mode for tests (set to 'mock' for offline testing)
VITE_BACKEND_MODE="production"

# Merkle logging (for integrity verification)
VITE_MERKLE_LOGGING_ENABLED=false
